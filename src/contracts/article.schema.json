{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "intro": {
      "type": "string",
      "minLength": 30
    },
    "background": {
      "type": "string",
      "minLength": 30
    },
    "cases": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "minLength": 30
        },
        "metrics": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "enum": ["CVR", "CAC", "LTV", "Retention", "Leads", "PV"]
              },
              "value": {
                "type": "number"
              },
              "unit": {
                "type": "string"
              }
            },
            "required": ["name", "value", "unit"],
            "additionalProperties": false
          }
        }
      },
      "required": ["text", "metrics"],
      "additionalProperties": false
    },
    "insights": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": {
        "type": "string",
        "minLength": 10
      }
    },
    "faq": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "type": "object",
        "properties": {
          "q": {
            "type": "string"
          },
          "a": {
            "type": "string"
          }
        },
        "required": ["q", "a"],
        "additionalProperties": false
      }
    },
    "cta": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200
    }
  },
  "required": ["intro", "background", "cases", "insights", "faq", "cta"],
  "additionalProperties": false
}